{
  "version": "2.0.0",
  "tasks": [
    // Build Tasks
    {
      "label": "Build: Install Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/pip.exe",
      "args": ["install", "-r", "client/requirements.txt"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build: Update All Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/pip.exe",
      "args": ["install", "--upgrade", "-r", "client/requirements.txt"],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },

    // Run/Start Tasks
    {
      "label": "Run: fnwispr",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/python.exe",
      "args": ["client/main.py"],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run (No Debug): fnwispr",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/python.exe",
      "args": ["client/main.py"],
      "problemMatcher": [],
      "group": "run",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },

    // Test Tasks
    {
      "label": "Test: All Tests",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/pytest.exe",
      "args": ["tests/", "-v"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Test: Coverage Report",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/pytest.exe",
      "args": ["tests/", "--cov=client", "--cov-report=html"],
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },

    // Utility Tasks
    {
      "label": "Utility: View Application Logs",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "& { if (Test-Path fnwispr_client.log) { Get-Content fnwispr_client.log -Tail 50 -Wait } else { Write-Host 'Log file not found. Run the app first.' -ForegroundColor Yellow } }"
      ],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Utility: Clean Logs",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "& { if (Test-Path fnwispr_client.log) { Remove-Item fnwispr_client.log; Write-Host 'Logs cleared' -ForegroundColor Green } }"
      ],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },

    // Linting/Formatting Tasks
    {
      "label": "Lint: Black (Format)",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/black.exe",
      "args": ["client/"],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Lint: Flake8",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/flake8.exe",
      "args": ["client/"],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Lint: All",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "& { Write-Host 'Running Black...' -ForegroundColor Cyan; & '${workspaceFolder}/venv/Scripts/black.exe' client/; Write-Host 'Running Flake8...' -ForegroundColor Cyan; & '${workspaceFolder}/venv/Scripts/flake8.exe' client/ }"
      ],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },

    // Development Workflow Tasks
    {
      "label": "Dev: Initialize Environment",
      "type": "shell",
      "command": "pwsh",
      "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-File", "init.ps1"],
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": false
    }
  ]
}
